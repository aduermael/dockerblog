{{ define "footer" }}
<div id="footer">
	<div id="sections">
		<div class="group">
			<div class="itemWrapper">
				<div class="item">
					<h2>Pages</h2>
					<ul>
						<li><a href="{{ .host }}/qui-suis-je">Qui suis-je ?</a></li>
						<li><a href="{{ .host }}/contact">Contact</a></li>
						<li><a href="{{ .host }}/rss">RSS</a></li>
						<li>{{ template "archives" . }}</li>
					</ul>
				</div>
			</div>

			<div class="itemWrapper">
				<div class="item">
					<h2>Newsletter</h2>
					<form>
						<input class="newsletterEmail" style="background-color: rgb(102, 102, 102); color: #FFF; margin-bottom: 0.5rem;" onfocus="this.placeholder=''" onblur="if (this.value==''){this.placeholder = 'mon email'}" type="email" placeholder="mon email" onkeydown="newsletterFormCheck(this);" onpaste="newsletterFormCheck(this);" oninput="newsletterFormCheck(this);">
						
						<div style="margin-bottom: 0.5rem; margin-left: auto; margin-right: auto; max-width: 150px; width: 100%;">
							<p style="margin:0; padding: 0;">Un email à chaque nouvelle note!</p>
						</div>

						<p class="newsletter-error" class="newsletter-error">L'email doit être valide et au moins une option doit être cochée.</p>
						
						<input onclick="newsletterRegister(this);" class="newsletterButton" type="button" value="S'abonner">
					</form>
				</div>
			</div>
		</div>

		<div class="group">
			<div class="itemWrapper">
				<div class="item">
					<h2>Me suivre</h2>
					<ul>
						<li><a href="https://x.com/bloglaurel"><span class="fab fa-twitter"></span> X</a></li>
						<li><a href="https://www.facebook.com/LaurelComics"><span class="fab fa-facebook-square"></span> Facebook</a></li>
						<li><a href="https://instagram.com/bloglaurel/"><span class="fab fa-instagram"></span> Instagram</a></li>
						<li><a href="https://fr.tipeee.com/laurel">Tipeee</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="clear"></div>
	</div>
	<p>© 2003-2025 Laurel<br />Créé par <a href="https://x.com/aduermael">@aduermael</a></p>
</div>
{{ end }}