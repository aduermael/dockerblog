<!DOCTYPE html>
<html lang="{{ .lang }}">
 	{{ template "head" . }}
	<body>
	 	{{ template "header" . }}
		{{ template "menu" . }}
		<div id="content">
		 	<div id="posts">
			 	<div class="post">

					<div class="title">
						<h2><a href="/{{.post.Slug}}/{{.post.ID}}">{{ .post.Title }}</a></h2>
						<p class="post-date">{{ .post.Since }}</p>
						<div class="clear"></div>
					</div>
					 	
					{{ range .post.Blocks }}
						{{ if eq .type "text" }}
							<div class="block text"><p>{{ .text }}</p></div>
						{{ else if eq .type "image" }}
							<div class="block image">
								{{ if ne .url "" }}<a href="{{.url}}">{{end}}<img src="{{ .path }}" alt="{{.description}}">{{ if ne .url "" }}</a>{{end}}
							</div>
						{{ end }}
					{{ end }}
					 	
					{{ if .post.ShowComments }}
						<a id="comments" name="comments" class="anchor"></a>
						<div class="number-of-comments">
							<a href="/{{.post.Slug}}/{{.post.ID}}#comments">
								{{ if eq .post.NbComments 1 }}
									<strong>1</strong> commentaire{{ else if gt .post.NbComments 1 }}<strong>{{ .post.NbComments }}</strong> commentaires
								{{ else }}
									Commentaires
								{{ end }}
							</a>
						</div>
						<div class="comments">
							<div id="empty-div"></div>
							{{ range .post.Comments }}
								<div id="com_{{.ID}}" class="comment comment-block indent-{{.Indent}}{{ if .Highlighted }} starred{{ end }}">
									<img class="avatar" src="http://www.gravatar.com/avatar/{{.GravatarHash}}?s=160&d=http%3A%2F%2Fbloglaurel.com%2Fimg%2Favatar.jpg">
									<h3>{{.Name}}<span class="date"> - {{ .Since }}</span></h3>
									<p>{{.Content}}</p>
									<a href="#" onclick="answerComment({{.ID}});return false;">Answer</a>
								</div>
							{{ end }}

							{{ if .post.AcceptComments }}
								<form id="commentForm" class="comment-block">
								 	<div id="commentSending" class="comment-post-info" style="display: none"><p>Envoi du commentaire...</p></div>
							 		<div id="commentSent" class="comment-post-info" style="display: none"><p>Commentaire bien reÃ§u, merci ! ðŸ™‚</p></div>
							 		<div id="commentWaitingForApproval" class="comment-post-info" style="display: none"><p>Commentaire envoyÃ©, en attente de validation ! ðŸ™‚</p></div>
							 		<div id="commentError" class="comment-post-info" style="display: none"><p>Erreur lors de l'envoi du commentaire ! ðŸ˜•</p></div>
								 	
								 	<div id="commentFields">
										
										<input id="answerComID" type="hidden" value="-1">
										<input id="postID" type="hidden" value="{{.post.ID}}">

										<!-- simple trap for stupid robots -->
										<input id="url" name="url" type="text" value="">
										<input id="email" name="email" type="email" value="">
										
										<div class="header">
											<img id="commentGravatar" src="http://www.gravatar.com/avatar/182ff44dc024648f78cd08c5a1009c95?s=160&amp;d=http%3A%2F%2Fbloglaurel.com%2Fimg%2Favatar.jpg">
										
											<div class="nameAndEmail">
												<input id="commentName" type="text" value="{{ .user.Name }}" onfocus="backToOriginalBackground(this);" placeholder="name" class="mandatory">
												<input id="commentEmail" type="email" value="{{ .user.Email }}" onkeyup="emailChange(this);" onfocus="backToOriginalBackground(this);" placeholder="email" class="optional">
											</div>
										</div><!-- header -->

										<div class="webProfile">
											<div class="left">
												<input id="commentWebsite" type="text" value="{{ .user.Website }}" onfocus="backToOriginalBackground(this);" placeholder="website" class="optional">
											</div>
											<div class="right">
												<input id="commentTwitter" type="text" value="{{ .user.Twitter }}" onfocus="backToOriginalBackground(this);" placeholder="twitter" class="optional">
											</div>
										</div><!-- webProfile -->
									 		
										<textarea id="commentContent" onfocus="backToOriginalBackground(this);"></textarea>
										<input type="button" value="ENVOYER" onclick="postComment('name','email','website','twitter')">

										<label><input id="commentRemember" type="checkbox"{{ if .user.RememberInfo }} checked{{end}}>Se rappeler de mes informations.</label>
										<label><input id="commentEmailOnAnswer" type="checkbox"{{ if .user.EmailOnAnswer }} checked{{end}}>ÃŠtre tenu au courant des rÃ©ponses par email.</label>
									</div><!-- commentFields -->
								</form><!-- commentForm -->
							{{ end }}
						</div><!-- comments -->
					{{ end }}
				</div>
			</div>
		</div><!-- content -->
		{{ template "footer" . }}
	</body>
</html>
