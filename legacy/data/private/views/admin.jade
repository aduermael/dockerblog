extends layout

block head
	script(src='/admin/js/nicEdit.js')
	script(src='/admin/js/functions-common.js')
	script(src='/admin/js/functions-admin.js')
	link(rel='stylesheet', href='/admin/admin.css')

block structure
	.navigation
		ul
			li
				.styled-select
					select#langSelector
						option(selected disabled) #{lang}
						option(value="en") en
						option(value="fr") fr
			li 
				a(href="/admin/new") + Post
			li 
				a(href="/admin/posts") Posts
			li 
				a(href="/admin/pages/new") + Page
			li 
				a(href="/admin/pages") Pages
			li 
				a(href="/admin/comments") Comments
			li
				a(href="/admin/newcomments") New Comments
			li 
				a(href="/admin/keys") Keys
			li 
				a(href="/admin/config") Config

	.clearboth
	

	block pagecontent
	
