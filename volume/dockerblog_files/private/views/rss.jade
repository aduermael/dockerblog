doctype xml
rss(version='2.0', xmlns:atom='<a href="http://www.w3.org/2005/Atom" rel="nofollow">http://www.w3.org/2005/Atom</a>')
    channel
        title BlogLaurel
        link <a href="http://bloglaurel.com" rel="nofollow">http://http://bloglaurel.com</a>
        atom:link(href='<a href="http://bloglaurel.com/rss" rel="nofollow">http://bloglaurel.com/rss</a>', rel='self', type='application/rss+xml')
        description Laurel's feed
        language en
        if posts.length
            lastBuildDate= new Date(posts[0].date).toUTCString()
        each post in posts
            item
                title= post.title
                link <a href="http://bloglaurel.com/#{post.slug}/#{post.ID}" rel="nofollow">http://bloglaurel.com/#{post.slug}/#{post.ID}</a>
                description
                    | <![CDATA[
                    | test
                    | ]]>
                pubDate= new Date(post.date).toUTCString()
                guid(isPermaLink='false') <a href="http://bloglaurel.com/#{post.slug}/#{post.ID}" rel="nofollow">http://bloglaurel.com/#{post.slug}/#{post.ID}</a>