extends blog
	
block content

	#div.post
		- each block in post.blocks
			if (block.type == "title")
				#div.block.title
					h2
						a(href="/post" + post.ID) #{block.text} 
						
					.date(style="float:right;") #{post.stringdate}
					.clearboth
	
			else if (block.type == "text")
				#div.block.text
					p !{block.text}

			else if (block.type == "image")
				#div.block_img.image
					if (block.url != "")
						a(href=block.url)
							img(src=block.path alt="bloglaurel comics")
					else
						img(src=block.path alt="bloglaurel comics")
		.comments
			h2 X Comments
			.form
				input(type="text" value="name" onfocus="if(this.value == 'name') { this.value = ''; }" 
				onblur="if(this.value == '') { this.value = 'name'; }")
				input.optional(type="text" value="email" onfocus="if(this.value == 'email') { this.value = ''; }"
				onblur="if(this.value == '') { this.value = 'email'; }")
				textarea
				input(type="button" value="Send")
	