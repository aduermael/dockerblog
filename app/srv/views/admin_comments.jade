extends admin


block pagecontent

	h2 Comments (#{lang})

	.list
		ul
			- each comment in comments
				li
					div
						strong #{comment.name}
						|  (#{comment.date})
						- if (comment.email != "")
							|  - 
							a(href="mailto:" + comment.email) #{comment.email}
						|  - 
						a(href="/post/" + comment.postID) (post)
					div
						|  #{comment.content}
					
					div
						a(href="#" onclick="deleteCom(" + comment.ID + ")" style="color:#c33e1b") Delete
						- if (comment.valid == 0 || !comment.valid)
							|  - 
							a(href="#" onclick="acceptCom(" + comment.ID + ")" style="color:#8ab946") Accept


